  <div class="post-job mb-5 mt-5">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h3 class="text-center">What services are you looking for?</h3>
          <%= form_for @request do |f| %>
          <form action="">
            <div class="form-group">
              <label for="inputid1">Title (*)</label>
              <%= f.text_field :title, placeholder: "I request...", class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="inputid2">Description (*)</label>

                <%= f.text_area :description, placeholder: "I'm looking for...", class: "form-control",rows:"5", id:"inputid2" %>
            </div>
            <div class="form-group">
              <label for="inputid3">Category</label>


                <%= f.select(:category_id, options_for_select(@categories.map { |c| [c.name, c.id] }),{ class: "form-control custom-select" }) %>

            </div>
            <div class="form-group">
              <label for="inputid4">Delivery</label>
              <%= f.number_field :delivery, placeholder: "1-30 days", class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="inputid5">Budget</label>
              <%= f.number_field :budget, placeholder: "$5 minimum", class: "form-control" %>
            </div>
              <div class="form-group">
                  <%= f.file_field :attachment_file, class: "file-input" %>
                  <label for="inputid6">Upload attachment (Optional)</label>
                </div>
                                <% if @request.attachment_file.attached? %>
                    <p>
                        <%= link_to url_for(@request.attachment_file), 
                                        class: "tag small is-warning m-t-20",  
                                        download: "Attachment_#{@request.attachment_file.id}" do %>
                            <i class="fas fa-paperclip fa-lg p-r-5"></i> <%= @request.attachment_file.filename %>

                        <% end %>
                    </p>
                <% end %>

            <button type="submit" class="btn">Update request</button>
          </form>
          <% end %>
        </div>

      </div>
