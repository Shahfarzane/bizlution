  <div class="user-earning">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <h2>Job Requests</h2>


          <div class="user-earing-item">
            <h5 class="mb-3">Manage requests</h5>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Request</th>
                    <th scope="col">Offers</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                   <% if @requests.blank? %>
                   <tr>
    <td colspan="4" class="has-text-centered"><h1>NOTHING TO SHOW HERE</h1></td>
</tr>
<% end %>

<% @requests.each do |r| %>
                  <tr>
                    <td><%= r.created_at.strftime('%d, %b %Y') %></td>
                    <td><%= link_to r.title, request_path(r) %></td>
                    <td><%= link_to r.offers.count, request_offers_path(r), class:"btn btn-info" %></td>
                    <td>                            <%= link_to edit_request_path(r), class: "m-r-5" do %>
                                <span class="icon btn btn-success">
                                    <i class="far fa-edit fa-lg"></i>
                                </span>
                            <% end %>

                            <%= link_to r, method: :delete, data: {confirm: "Are you sure?"} do %>
                                <span class="icon btn btn-danger">
                                    <i class="far fa-trash-alt fa-lg"></i>
                                </span>
                            <% end %>
                          </td>

                  </tr>
                   <% end %>
                
                </tbody>
              </table>
            </div>
